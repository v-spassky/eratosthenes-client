{
    "compilerOptions": {
        // Visit https://aka.ms/tsconfig to read more about this file
        // Projects
        // ...
        // Language and Environment
        "target": "es2016",
        "jsx": "react",
        // Modules
        "baseUrl": "src/",
        "module": "commonjs",
        "moduleResolution": "Node",
        // JavaScript Support
        // "allowJs": true,
        // Emit
        // "outDir": "dist",
        // ...
        // Interop Constraints
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        // Type Checking
        "strict": true,
        // Completeness
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}
